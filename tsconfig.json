{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "jsx": "react-jsx",        // ðŸ‘ˆ habilita JSX con React 17+
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "baseUrl": "./resources/js",     // ðŸ‘ˆ para que funcione @/Components
    "paths": {
      "@/*": ["*"]
    }
  },
  "include": ["resources/js"],       // ðŸ‘ˆ incluye tu carpeta de React
  "exclude": ["node_modules"]
}
